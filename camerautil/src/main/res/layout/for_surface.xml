<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <SurfaceView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/text1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button android:layout_width="match_parent" android:layout_height="60dp" android:id="@+id/button1"
            app:layout_constraintBottom_toBottomOf="parent" android:text="拍摄"/>
    <Button android:layout_width="match_parent" android:layout_height="60dp" android:text="切换摄像头"
            android:id="@+id/button2"  app:layout_constraintBottom_toTopOf="@id/button1"/>
</androidx.constraintlayout.widget.ConstraintLayout>

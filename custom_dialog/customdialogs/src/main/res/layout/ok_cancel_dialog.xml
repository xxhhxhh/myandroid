<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/text"
              android:textSize="20sp" android:textAlignment="center" android:text="是否确定"
              android:layout_gravity="center" android:gravity="center"/>
    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="60dp"
                    android:layout_marginTop="15dp" android:background="@drawable/top_border">
        <TextView android:layout_width="0dp" android:layout_weight="0.5" android:layout_height="60dp"
                  android:background="@drawable/right_border"
                  android:textSize="20sp" android:textAlignment="center" android:text="确定" android:id="@+id/ok"
                  android:layout_gravity="center" android:gravity="center"/>
        <TextView android:layout_width="0dp" android:layout_weight="0.5" android:layout_height="60dp"
                  android:textSize="20sp" android:textAlignment="center" android:text="取消" android:id="@+id/cancel"
                  android:layout_gravity="center" android:gravity="center"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.9"
                    android:orientation="vertical" android:id="@+id/pagerShower"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="0.1" android:orientation="vertical">
        <!--底部导航-->
        <com.google.android.material.tabs.TabLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                                    app:layout_constraintBottom_toBottomOf="@+id/bottomPageLooker"
                                                    android:id="@+id/bottomPageLooker">
            <com.google.android.material.tabs.TabItem android:layout_width="wrap_content"
                                                      android:layout_height="match_parent"
                                                      android:text="@string/index"/>
            <com.google.android.material.tabs.TabItem android:layout_width="wrap_content"
                                                      android:layout_height="match_parent" android:text="@string/search"/>
            <com.google.android.material.tabs.TabItem android:layout_width="wrap_content"
                                                      android:layout_height="match_parent"
                                                      android:text="@string/mine"/>
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <Button
                android:text="@string/goBack"
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/goBack" android:layout_weight="0.2"/>
        <TextView
                android:layout_width="0dp" android:gravity="center" android:textSize="20sp"
                android:layout_height="50dp" android:id="@+id/textView" android:layout_weight="0.6" android:text="@string/suiji"/>
        <Button
                android:text="@string/ok_add"
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/ok_add" android:layout_weight="0.2"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp" android:id="@+id/showLabels"
                 android:orientation="horizontal"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/share" android:hint="@string/share" android:layout_weight="0.2"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.1">
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.8"
                  android:id="@+id/tipText"/>
        <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.2"
                android:text="删除" android:id="@+id/deleteThese" android:layout_gravity="end"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="0.4">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/showMedia">
        </LinearLayout>
    </ScrollView>
    <!--底部选项栏-->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="0.1">
        <Button
                android:text="@string/location"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/location" android:layout_weight="0.25"/>
        <Button android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.25"
                android:id="@+id/reSetLocation" android:text="刷新位置"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="0.3"/>
        <Button
                android:text="@string/open"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/open" android:layout_weight="0.2"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="0.1">
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent" android:background="@mipmap/photo_icon"
                android:id="@+id/add_picture" android:layout_weight="0.3"/>
        <ImageButton
                android:layout_width="0dp" android:background="@mipmap/at_icon"
                android:layout_height="match_parent" android:id="@+id/at_one"
                android:layout_weight="0.3"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent" android:background="@mipmap/label_chose"
                android:id="@+id/add_topic" android:layout_weight="0.3"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <Button
                android:text="@string/goBack"
                android:layout_width="0dp"
                android:layout_height="50dp" android:id="@+id/goBack" android:layout_weight="0.2"/>
        <TextView
                android:layout_width="0dp" android:gravity="center" android:textSize="20sp"
                android:layout_height="50dp" android:layout_weight="0.8" android:text="随记正文"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/userinfo_row"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/suiji"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:id="@+id/showComments"
                  android:orientation="vertical"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="100dp" android:layout_marginTop="20dp">

        <!--头像-->
        <LinearLayout style="@style/messageShow.headImage">
            <ImageView android:layout_width="match_parent" android:id="@+id/messageShowHeadImage"
                        android:layout_height="match_parent"/>
        </LinearLayout>
        <!---->
        <LinearLayout style="@style/messageShow.userNameOrUserLabel">
            <TextView style="@style/messageShow.userName" android:textAlignment="center" android:textSize="20sp"/>
            <TextView style="@style/messageShow.userLabel"/>
        </LinearLayout>
        <Button style="@style/messageShow.focus" android:visibility="invisible"/>
        <Button style="@style/messageShow.report"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:id="@+id/bottomTip"
              android:layout_width="match_parent"
              android:layout_height="100dp">
    <ProgressBar android:layout_width="80dp" android:layout_height="50dp" android:layout_gravity="center" android:visibility="gone"
                 style="@style/TextAppearance.AppCompat.Inverse" android:id="@+id/loadingProgress"/>
    <TextView android:layout_width="match_parent" android:layout_height="50dp" android:gravity="center"
              android:visibility="gone"
              android:id="@+id/loadEndTipText" android:text="到底了，点击刷新"/>
</LinearLayout>
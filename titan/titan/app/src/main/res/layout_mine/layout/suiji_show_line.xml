<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView style="@style/messageShow.text"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp" android:orientation="horizontal">
        <TextView android:layout_width="0dp" android:layout_weight="0.7" android:layout_height="50dp" android:text="date" android:id="@+id/theDate"/>
        <TextView android:layout_width="0dp" android:layout_weight="0.3" android:layout_height="50dp" android:id="@+id/commentNumber" android:text="999+"/>
    </LinearLayout>
    <TextView android:layout_height="15dp" android:layout_width="match_parent" android:background="@color/blackBorderBottom"/>
</LinearLayout>
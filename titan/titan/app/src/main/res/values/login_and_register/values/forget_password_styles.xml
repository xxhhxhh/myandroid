<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--整体-->
    <style name="forgetPassword">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--输入-->
    <style name="forgetPassword.input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
    </style>
    <!--新密码-->
    <style name="forgetPassword.input.new" parent="forgetPassword.input">
        <item name="android:hint">@string/inputNewPassword</item>
        <item name="android:id">@id/newPassword</item>
    </style>
    <!--再次确认-->
    <style name="forgetPassword.input.reinput" parent="forgetPassword.input">
        <item name="android:hint">@string/reInputPassword</item>
        <item name="android:id">@id/reInputPassword</item>
    </style>
    <!--确认按钮-->
    <style name="forgetPassword.confirm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:id">@id/confirm</item>
        <item name="android:text">@string/confirm</item>
    </style>
</resources>